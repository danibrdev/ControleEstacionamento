@model TesteBenner.DAO.Entities.Parametro

@{
    ViewData["Title"] = "Inserir parâmetro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Inserir Parâmetro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InserirParametro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VigenciaInicio" class="control-label"></label>
                <input asp-for="VigenciaInicio" class="form-control" asp-format="{0:dd/MM/yyyy}" required/>
                <span asp-validation-for="VigenciaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VigenciaFim" class="control-label"></label>
                <input asp-for="VigenciaFim" class="form-control" asp-format="{0:dd/MM/yyyy}" required/>
                <span asp-validation-for="VigenciaFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorHoraInicial" class="control-label"></label>
                <input asp-for="ValorHoraInicial" class="form-control" required/>
                <span asp-validation-for="ValorHoraInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorHoraFinal" class="control-label"></label>
                <input asp-for="ValorHoraFinal" class="form-control" required/>
                <span asp-validation-for="ValorHoraFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Inserir parâmetro" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>
